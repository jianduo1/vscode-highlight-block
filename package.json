{
  "name": "highlight-block",
  "displayName": "Highlight Block",
  "description": "高亮指定标记之间的代码块",
  "version": "1.2.11",
  "icon": "icon.jpg",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "highlight",
    "block",
    "code",
    "marker"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "highlight-block.toggle",
        "title": "切换高亮块",
        "category": "Highlight Block"
      },
      {
        "command": "highlight-block.clear",
        "title": "清除所有高亮",
        "category": "Highlight Block"
      },
      {
        "command": "highlight-block.showMarkers",
        "title": "显示可用标记",
        "category": "Highlight Block"
      }
    ],
    "configuration": {
      "title": "Highlight Block",
      "properties": {
        "highlightBlock.colorMappings": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "string",
              "pattern": "^#[0-9a-fA-F]{6}[0-9a-fA-F]{2}?$|^[a-zA-Z]+$",
              "description": "颜色值 (支持 #hex 格式或颜色名称)"
            }
          },
          "additionalProperties": {
            "type": "string"
          },
          "description": "标记与颜色的映射配置。",
          "default": {
            "info": "#0080ff20",
            "highlight": "#ffff0020",
            "tip": "#4b5a2cff",
            "warn": "#ffa50020",
            "error": "#ff000020",
            "success": "#00ff0020",
            "delete": "#ff000020",
            "add": "#00ff0020"
          }
        },
        "highlightBlock.autoHighlight": {
          "type": "boolean",
          "default": true,
          "description": "自动检测并高亮标记块"
        },

        "highlightBlock.enableSyntaxFolding": {
          "type": "boolean",
          "default": true,
          "description": "启用基于语法解析的智能折叠（使用tree-sitter）。"
        },
        "highlightBlock.enableRegexFolding": {
          "type": "boolean",
          "default": true,
          "description": "启用基于正则表达式的折叠（多行字符串、注释等）。"
        },
        "highlightBlock.enableIndentFolding": {
          "type": "boolean",
          "default": false,
          "description": "启用基于缩进的折叠。"
        },
        "highlightBlock.syntaxFoldingLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["javascript", "typescript", "python", "java", "json"],
          "description": "支持语法折叠的语言列表。"
        }
      }
    }
  },
  "scripts": {
    "pkg": "vsce package -o release/"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jianduo1/highlight-block.git"
  },
  "publisher": "jack-duo",
  "license": "MIT"
}